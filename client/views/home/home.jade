					+case(title="Яндекс.Маркет" href="http://market.yandex.ru" subtitle="Главная e-commerce платформа Рунета")

template(name="case")
	.case.column
		if href
			a.ui.small.link.blue.header(href=href)
				| {{ title }}
		else
			.ui.small.header
				| {{ title }}
		.subtitle {{ subtitle }}

